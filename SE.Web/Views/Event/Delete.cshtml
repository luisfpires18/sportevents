@model SE.Web.Models.Event

@{
    ViewBag.Title = "Delete Event";
}

<h2>@ViewBag.Title</h2><hr />
<p class="error">@ViewBag.ErrorMessage</p>
<h3>Are you sure you want to delete this?</h3>
<form asp-action="Delete" asp-route-id="@Model.EventID">
    <div>
        <h4><b>Name:</b> @Model.Name</h4>
        <h4><b>Local:</b> @Model.Local</h4>
        <h4><b>Date:</b> @Model.EventDate.ToShortDateString()</h4>
    </div>
    <br />
    <a class="btn btn-default" asp-action="Index">Back to List</a>
    <button type="submit" class="btn btn-default">Delete</button>
</form>


