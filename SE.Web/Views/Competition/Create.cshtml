@model SE.Web.Models.Competition
@{
    ViewBag.Title = "Create Competition";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Create" asp-controller="Competition" method="post">
    <div class="form-horizontal">

        <div class="form-group">
            <label asp-for="@Model.Name" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Distance" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Distance" class="form-control" />
                <span asp-validation-for="@Model.Distance" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="@Model.EventID" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="@Model.EventID" asp-items="ViewBag.Events" class="form-control">
                </select>
                <span asp-validation-for="@Model.EventID" class="text-danger"></span>
            </div>
        </div>
        
        
        


    </div>
    <hr />
    <a class="btn btn-default" asp-action="Index">Back to List</a>
    <button type="submit" class="btn btn-default">Create</button>
</form>
