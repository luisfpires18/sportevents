@model SE.Web.Models.Sport
@{
    ViewBag.Title = "Create Sport";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Create" asp-controller="Sport" method="post">
    <div class="form-horizontal">

        <div class="form-group">
            <label asp-for="@Model.Name" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Responsible" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Responsible" class="form-control" />
                <span asp-validation-for="@Model.Responsible" class="text-danger"></span>
            </div>
        </div>

    </div>
    <hr />
    <a class="btn btn-default" asp-action="Index">Back to List</a>
    <button type="submit" class="btn btn-default">Create</button>
</form>
