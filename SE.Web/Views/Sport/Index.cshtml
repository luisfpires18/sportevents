@model List<SE.Web.Models.Sport>
@{
    ViewBag.Title ="Sports";
}
<h2>@ViewBag.Title</h2>

<hr />
<a asp-area="" asp-action="Create" class="btn btn-default pull-right">Create New</a>
<br /><br /><br />



<form asp-controller="Sport" asp-action="Index" method="post">
    <div class="list-group">
        
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="list-group-item justify-content-between">

                <input asp-for="@Model[i].isSelected" type="checkbox"/>

                <a asp-controller="Sport"
                   asp-action="Details"
                   asp-route-id="@Model[i].SportID">
                    @Model[i].Name
                </a>

                <a asp-controller="Sport"
                   asp-action="Edit"
                   asp-route-id="@Model[i].SportID"
                   class="badge badge-default badge-pill pull-right">
                    Edit
                </a>
            </div>
            <input type="hidden" asp-for="@Model[i].Name"/>
            <input type="hidden" asp-for="@Model[i].SportID"/>
        }
        <br/>
        <button type="submit" class="btn btn-default">Delete</button>
        <a class="btn btn-default" asp-controller="Home" asp-action="Index">Go Back</a>
    </div>
</form>